<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="2.5" type="template" method="upgrade">
	<name>kaiser</name>
	<creationDate>August 2012</creationDate>
	<author>Robin Jungermann - Crosstec GmbH &amp; Co. KG</author>
	<copyright>Copyright Â© 2012 Robin Jungermann</copyright>
        <licence>GNU/GPL 2.2</licence>
	<authorEmail>info@crosstec.de</authorEmail>
	<authorUrl>http://crosstec.de</authorUrl>
	<version>1.1</version>
        <description>kaiser - an easy-to-use Joomla! website template</description>
	
	<files>
		<folder>css</folder>
		<folder>fonts</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>languages</folder>
		<folder>system</folder>
		<folder>content_images_source</folder>
		<folder>bg_images_source</folder>
		<folder>images_source</folder>
		<folder>elements</folder>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>offline.php</filename>
		<filename>templateDetails.xml</filename>
	</files>
	
	<languages folder="languages">
		<language tag="en-GB">en-GB/en-GB.tpl_kaiser.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_kaiser.sys.ini</language>
	</languages>
	
	<positions>
		<position>searchHeader</position>
		<position>loginHeader</position>
		<position>mainNav</position>
		
		<position>highlights_1_1</position>
		<position>highlights_1_2</position>
		<position>highlights_1_3</position>
		<position>highlights_1_4</position>
		<position>highlights_1_5</position>
		<position>highlights_1_6</position>
		
		<position>maincontent_1_1</position>
		<position>maincontent_1_2</position>
		<position>maincontent_1_3</position>
		<position>maincontent_1_4</position>
		<position>maincontent_1_5</position>
		<position>maincontent_1_6</position>
		
		<position>maincontent_2_1</position>
		<position>maincontent_2_2</position>
		<position>maincontent_2_3</position>
		<position>maincontent_2_4</position>
		<position>maincontent_2_5</position>
		<position>maincontent_2_6</position>
		
		<position>left</position>
		<position>right</position>
		
		<position>footer_1_1</position>
		<position>footer_1_2</position>
		<position>footer_1_3</position>
		<position>footer_1_4</position>
		<position>footer_1_5</position>
		<position>footer_1_6</position>
		
		<position>footer_copyright</position>
		
		<position>breadcrumbs</position>
		
		<position>slider</position>	
		
	</positions>
	
	<config>
		<fields name="params" addpath="/templates/kaiser/elements" addfieldpath="/templates/kaiser/elements">
			<fieldset name="advanced">
				
				<field name="logo" type="media"
					label="Logo"
					description="Upload a logo for the site header."/>
										
				<field name="max_sitewidth" type="text" size="10" default="960" 
					label="Max Site Width" 
					description="Set the maximum width of the site in pixels."
					filter="int" />

				<field name="show_menu_text" type="input" default="Select a Page" 
					label="'Show Menu' Button Text" 
					description="Enter the text you want to appear first in the select-list navigation for small resolutions."
				/>
				
				<field type="spacer" class="text" label="&lt;a href='http://crosstec.de/en/joomla-templates.html' target='_blank'&gt;&lt;b style='color:red;text-decoration: underline'&gt;Get this template with footer removal, color picker and more options from here!&lt;/b&gt;&lt;/a&gt;" />

			</fieldset>
		</fields>
	</config>
	
</extension>
